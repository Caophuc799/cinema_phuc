<!-- views/pages/about.ejs -->


<!DOCTYPE html>
<html lang="en" ng-app="app.cinema">

<head>

    <%- partial('./../share/load.ejs') -%>

        <!-- Load javascript  -->
        <script src="/javascripts/film/listFilm.js"></script>
        <!--Load style css my cinema-->


        <link rel="stylesheet" href="/stylesheets/user/profile.css">
        <!-- Load style header-->
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="/javascripts/user/profile.js">

        </script>

        <!-- Load style header-->
        <link rel="stylesheet" href="/stylesheets/style.css">

        <meta charset="UTF-8">
        <title>Thông tin tài khoản</title>

</head>

<body>



    <div ng-controller="profileController">

        <!-- Header -->
        <div class="header">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/film/list" style="font-size:40px;color:antiquewhite;">Cinema</a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item  main-disactive">
                                <a class="nav-link" href="/film/list">Danh Sách Phim </a>
                            </li>
                            <li class="nav-item  main-disactive">
                                <a class="nav-link" href="/film/create">Tạo phim</a>
                            </li>

                        </ul>
                        <div class="header-icon-logout">
                            <a href="#"><i ng-click="signoutCinema()" class="fa fa-sign-out white" aria-hidden="true"></i></a>
                        </div>
                        <div class="avatar-profile-header">
                            <a href="">
                        <img src="{{account.url}}" class="avatar-img" alt="avatar">
</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>


        <!-- Body -->
        <div class="container">
            <h1 class="page-header">Edit Profile</h1>
            <div class="row">
                <!-- left column -->
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="avatar-profile">

                        <img id="img-profile" src="{{account.url}}" class="avatar-img" alt="avatar">
                    </div>
                    <h6>Upload a different photo...</h6>
                    <input type="file" id="upload-file" onchange="readURL(this);" class="text-center center-block well well-sm">

                </div>
                <!-- edit form column -->
                <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">×</a>
                        <i class="fa fa-coffee"></i> This is an <strong>.alert</strong>. Use this to show important messages
                        to the user.
                    </div>
                    <h3>Personal info</h3>
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Display Name:</label>
                            <div class="col-lg-8">
                                <input ng-model="account.name" class="form-control" value="Jane" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input ng-model="account.email" class="form-control" value="janesemail@gmail.com" type="text">
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Password:</label>
                            <div class="col-md-8">
                                <input class="form-control" value="" type="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Confirm password:</label>
                            <div class="col-md-8">
                                <input class="form-control" value="" type="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-8">
                                <input ng-click="savechange()" class="btn btn-primary" value="Save Changes" type="button">
                                <span></span>
                                <input class="btn btn-default" value="Cancel" type="reset">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</body>

</html>