<!DOCTYPE html>


<html lang="en" ng-app="app.cinema">

<head>

    <%- partial('./../share/load.ejs') -%>
        <script src="/javascripts/system/register.js"></script>
        <link rel="stylesheet" href="/stylesheets/system/register.css">

        <meta charset="UTF-8">
        <title>Đăng kí</title>
</head>

<body>
    
    <div ng-controller="registerController">
       
        <div class="container">

            <div class="row justify-content-md-center" style="display:flex;flex-direction:row;justify-content:center">

                <div class="col-sm-5">
                    <div class="form-register">
                        
                            <div class="panel-title text-center">
                                 <h3 class="omb_authTitle"><a href="/" style="color:black">Login</a>  or <div style="color:blue;display:inline">Sign up</div></h3>  
                            </div>
                        
                        <div class="main-login">
                            <form class="form-horizontal" method="post" action="#">
                                <div class="main-center">
                                    <div class="form-group">
                                        <label style="text-align: left;" for="name" class="col-sm-6 control-label">Your Name</label>
                                        <div class="col-sm-11">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                                <input ng-model="yourname" type="text" class="form-control" name="name" id="name" placeholder="Enter your Name" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label style="text-align: left;" for="email" class="col-sm-6 control-label">Your Email</label>
                                        <div class="col-sm-11">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                                <input ng-model="email" type="text" class="form-control" name="email" id="email" placeholder="Enter your Email" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- <div class="form-group">
                                        <label style="text-align: left;" for="username" class="col-sm-6 control-label">Username</label>
                                        <div class="col-sm-11">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                                <input ng-model="username" type="text" class="form-control" name="username" id="username" placeholder="Enter your Username"
                                                />
                                            </div>
                                        </div>
                                    </div> -->

                                    <div class="form-group">
                                        <label style="text-align: left;" for="password" class="col-sm-6 control-label">Password</label>
                                        <div class="col-sm-11">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                                <input ng-model="password" type="password" class="form-control" name="password" id="password" placeholder="Enter your Password"
                                                />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label style="text-align: left;" for="confirm" class="col-sm-6 control-label">Confirm Password</label>
                                        <div class="col-sm-11">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                                <input ng-model="passwordConfirm" type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password"
                                                />
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="form-group col-sm-12 ">
                                        <button ng-click="createUser()" type="button" class="btn btn-primary btn-lg btn-block login-button">Register</button>
                                    </div>
                                   
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>